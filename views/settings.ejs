<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Remote Suite | Settings</title>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;500;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <style>
        .settings-card {
            background: rgba(255, 255, 255, 0.05);
            border-radius: 20px;
            padding: 40px;
            border: 1px solid rgba(255, 255, 255, 0.1);
            max-width: 600px;
            margin: auto;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            display: block;
            margin-bottom: 8px;
            color: #00d2ff;
            font-weight: 500;
        }

        input {
            width: 100%;
            padding: 12px;
            background: rgba(0, 0, 0, 0.3);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 10px;
            color: white;
            outline: none;
        }

        input:focus {
            border-color: #00d2ff;
        }

        .save-btn {
            background: #00d2ff;
            color: #000;
            border: none;
            padding: 15px 30px;
            border-radius: 10px;
            font-weight: 800;
            cursor: pointer;
            width: 100%;
            transition: 0.3s;
        }

        .save-btn:hover {
            transform: scale(1.02);
            box-shadow: 0 0 20px rgba(0, 210, 255, 0.4);
        }
    </style>
</head>

<body>
    <div class="glass-container">
        <aside class="sidebar">
            <div class="brand">RS SETTINGS</div>
            <a href="/" class="nav-btn" style="text-decoration: none; text-align: center;">Back to Dashboard</a>
        </aside>

        <main class="main-content" style="display: flex; align-items: center; justify-content: center;">
            <div class="settings-card">
                <h2 style="margin-bottom: 30px;">System Configuration</h2>

                <div class="form-group">
                    <label>Telegram Bot Token</label>
                    <input type="text" id="token" value="<%= config.TG_BOT_TOKEN %>"
                        placeholder="123456789:ABCDefgh...">
                </div>

                <div class="form-group">
                    <label>Telegram Chat ID</label>
                    <input type="text" id="chatId" value="<%= config.TG_CHAT_ID %>" placeholder="987654321">
                </div>

                <div class="form-group">
                    <label>Server Port (Requires Restart)</label>
                    <input type="number" id="port" value="<%= config.PORT %>">
                </div>

                <button class="save-btn" onclick="saveSettings()">Apply Changes</button>
                <p id="status" style="margin-top: 15px; text-align: center; color: #0f0;"></p>
            </div>
        </main>
    </div>

    <script>
        async function saveSettings() {
            const data = {
                TG_BOT_TOKEN: document.getElementById('token').value,
                TG_CHAT_ID: document.getElementById('chatId').value,
                PORT: parseInt(document.getElementById('port').value)
            };

            const resp = await fetch('/api/settings', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data)
            });

            if (resp.ok) {
                document.getElementById('status').innerText = 'Settings Saved! Reloading...';
                setTimeout(() => location.reload(), 2000);
            }
        }
    </script>
</body>

</html>